<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/color_1" /> <!-- Color when checked -->
            <size android:width="22dp" android:height="22dp" /> <!-- Size of the circle -->
        </shape>
    </item>

    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:color="@color/color_1" android:width="2dp" /> <!-- Border color and width -->
            <size android:width="22dp" android:height="22dp" /> <!-- Size of the circle -->
        </shape>
    </item>

</selector>